THIS	= ded

@make_include_left@@TD_LIB_rules@/td_lib.mk@make_include_right@

####### (Development) ##########################################################

prefix		= @prefix@
exec_prefix	= @exec_prefix@
datarootdir	= @datarootdir@
mandir		= @mandir@

USE	= man
SECTION	= 1
MANDIR	= $(DESTDIR)$(mandir)/$(USE)$(SECTION)/

####### (Standard Lists) #######################################################
IT	=\
	$(MANDIR)$(THIS).$(SECTION)

SOURCES	=\
	$(THIS).man

ALL	=

####### (Standard Productions) #################################################
all:		$(SOURCES) $(ALL)
clean:					; -$(RM) $(CLEAN)
distclean:	clean			; -$(RM) $(ALL) *.cat
check:
sources:	$(SOURCES)
install:	$(IT)
uninstall:				; -$(RM) $(IT)

####### (Details of Productions) ###############################################
$(IT):	$(THIS).man $(MANDIR)
	$(INSTALL_DATA) $(THIS).man $(IT)

$(MANDIR) :				; mkdir -p $@
