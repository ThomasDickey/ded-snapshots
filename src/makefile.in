# MAKE-file for directory editor

THIS	= ded

@make_include_left@@TD_LIB_rules@/td_lib.mk@make_include_right@

####### (Standard Lists) #######################################################
LINTLIBS= -ltd -lcurses

DED_H	= $(THIS).h $(CURSES_H) $(TD_INC)/dyn_str.h

B	= ../bin
ALL	= $B/$(THIS) $B/$(THIS).hlp

CSRC	=\
	$(THIS).c \
	boxchars.c \
	ded2s.c \
	dedblip.c \
	dedcolor.c \
	deddoit.c \
	deddump.c \
	dedfind.c \
	dedfree.c \
	dedline.c \
	dedmake.c \
	dedmsgs.c \
	dedname.c \
	dedread.c \
	dedring.c \
	dedscan.c \
	dedshow.c \
	dedsigs.c \
	dedsize.c \
	dedsort.c \
	dedtags.c \
	dedtype.c \
	deduniq.c \
	dedview.c \
	dedwait.c \
	dlog.c \
	ftree.c \
	history.c \
	inline.c \
	restat.c \
	showpath.c \
	sortset.c
HSRC	= \
	$(THIS).h \
	version.h

Z	= $(THIS).a
OBJS	= \
	$Z(boxchars.o) \
	$Z(ded2s.o) \
	$Z(dedblip.o) \
	$Z(dedcolor.o) \
	$Z(deddoit.o) \
	$Z(deddump.o) \
	$Z(dedfind.o) \
	$Z(dedfree.o) \
	$Z(dedline.o) \
	$Z(dedmake.o) \
	$Z(dedmsgs.o) \
	$Z(dedname.o) \
	$Z(dedread.o) \
	$Z(dedring.o) \
	$Z(dedscan.o) \
	$Z(dedshow.o) \
	$Z(dedsigs.o) \
	$Z(dedsize.o) \
	$Z(dedsort.o) \
	$Z(dedtags.o) \
	$Z(dedtype.o) \
	$Z(deduniq.o) \
	$Z(dedview.o) \
	$Z(dedwait.o) \
	$Z(dlog.o) \
	$Z(ftree.o) \
	$Z(history.o) \
	$Z(inline.o) \
	$Z(restat.o) \
	$Z(showpath.o) \
	$Z(sortset.o)

SOURCES	= makefile.in README $(CSRC) $(HSRC) $(THIS).hlp $(THIS)rc
MAIN_O	= $(THIS).o $Z

####### (Standard Productions) #################################################
all\
install:	$B $(SOURCES) $(ALL)

clean:				; - $(RM) $(CLEAN) $Z
distclean:	clean		; - $(RM) $(ALL)
run_test:
sources:	$(SOURCES)

####### (Details of Productions) ###############################################
$B:				; mkdir $@
$B/$(THIS):	$(MAIN_O) $(LIB_DEPS)	; $(LINK) -o $@ $(MAIN_O) $(LIB_ARGS)
$B/$(THIS).hlp:	$(THIS).hlp	; -$(PUT)

$Z:	$(OBJS)
	$(RANLIB) $@

$(THIS).o:	$(DED_H) $(THIS).c version.h
$(OBJS):	$(DED_H)
$Z(dedsort.o):	$(QSORT_H)
$Z(ded2s.o):	$(TD_INC)/acl.h
$Z(dedscan.o):	$(RCSDEFS_H) $(SCCSDEFS_H)
$Z(ftree.o):	$(RCSDEFS_H) $(SCCSDEFS_H)

####### (Development) ##########################################################
lint.out:	$(CSRC)		; $(DATE); $(LINT) $(LINTOPTS) $(CSRC) >>$@
tags:		$(CSRC)		; $(CTAGS) $(CSRC)
