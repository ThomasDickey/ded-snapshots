# Top-level make-file for DED

SHELL		= /bin/sh
@SET_MAKE@

THIS	= ded

@make_include_left@@TD_LIB_rules@/td_lib.mk@make_include_right@

####### (Standard Lists) #######################################################

prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
datarootdir	= @datarootdir@
datadir		= @datadir@
srcdir		= @srcdir@

BINDIR		= $(DESTDIR)$(bindir)
DATADIR		= $(DESTDIR)$(datadir)/$(THIS)

SOURCES	= \
	makefile.in \
	COPYING\
	README

MFILES	= \
	src/makefile.in \
	test/makefile.in \
	user/makefile.in 

DIRS	= \
		bin

RM		= -rm -f
CLEAN		= *.bak *.log *.out *.tst .nfs* core
PURE		= stamp-* config_h *.cache *.status

####### (Standard Productions) #################################################

all::		$(DIRS) $(SOURCES)
sources::	$(SOURCES)

all\
clean\
distclean\
check\
sources::	$(MFILES)
	cd src &&	$(MAKE) $(MAKE_OPTS) $@
	cd test &&	$(MAKE) $(MAKE_OPTS) $@
	cd user &&	$(MAKE) $(MAKE_OPTS) $@

lint.out\
lincnt.out:	$(MFILES)
	cd src &&	$(MAKE) $(MAKE_OPTS) $@

clean\
distclean::
	$(RM) $(CLEAN)
distclean::
	$(RM) $(PURE)
	$(RM) -r $(DIRS)
	$(RM) */makefile
	$(RM) makefile

install::	bin/$(THIS) $(BINDIR)
	$(INSTALL_PROGRAM) -m 755 bin/$(THIS) $(BINDIR)

install::	$(DATADIR)
	$(INSTALL_DATA) $(srcdir)/src/$(THIS).hlp $(DATADIR)
	$(INSTALL_DATA) $(srcdir)/src/ccodes.rc $(DATADIR)
	$(INSTALL_DATA) $(srcdir)/src/cnames.rc $(DATADIR)

uninstall::
	$(RM) $(BINDIR)/$(THIS)
	@-rmdir $(BINDIR)
	$(RM) $(DATADIR)/$(THIS).hlp
	$(RM) $(DATADIR)/ccodes.rc
	$(RM) $(DATADIR)/cnames.rc
	@-rmdir $(DATADIR)

install\
uninstall::
	cd user &&	$(MAKE) $(MAKE_OPTS) $@

####### (Details of Productions) ###############################################

$(BINDIR) \
$(DATADIR) \
$(DIRS):			; mkdir -p $@

bin/$(THIS):	all
$(SOURCES):
